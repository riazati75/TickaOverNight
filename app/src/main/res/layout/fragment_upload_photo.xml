<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_above="@+id/btnNext"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="3dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="- ترجیحا از عکس با ابعاد 720*1280 استفاده کنید.\n\n- از ارسال عکس های نامربوط خود داری کنید."
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/shape_edt_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="4dp">

            <TextView
                android:id="@+id/path1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="4dp"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/img1"
                android:singleLine="true"
                android:textColor="@color/gray800"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/camera_selector" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/shape_edt_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="4dp">

            <TextView
                android:id="@+id/path2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="4dp"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/img2"
                android:singleLine="true"
                android:textColor="@color/gray800"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/camera_selector" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/shape_edt_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="5dp"
            android:padding="4dp">

            <TextView
                android:id="@+id/path3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="4dp"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/img3"
                android:singleLine="true"
                android:textColor="@color/gray800"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/camera_selector" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/selector_main_btn"
        android:text="آپلود تصاویر و ادامه"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

</RelativeLayout>